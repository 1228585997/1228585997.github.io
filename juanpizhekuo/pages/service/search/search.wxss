@import "../../../components/loading/loading.wxss";

page,.container {
    height: 100%;
    background-color: #f7f7f7;
}

.search_box {
    position: relative;
    height: 44px;
    background: #fff;
    border-bottom: 1px solid #EBEBEB;
    padding: 8px 0;
}

.search_input {
    height: 28px;
    margin-right: 56px;
    line-height: 28px;
    padding-left: 32px;
    margin-left: 14px;
    background: #F2F2F2;
    font-size: 14px;
    color: #999;
    border-radius: 5px;
    box-sizing: border-box;
}

.search_icon {
    position: absolute;
    width: 12px;
    height: 12px;
    display: block;
    left: 22px;
    top: 16px;
}

.placeholder-text {
    font-size: 14px;
    color: #999;
}

.search_button {
    position: absolute;
    top: 50%;
    right: 16px;
    transform: translateY(-50%);
    font-size: 14px;
    color: #333;
}

.question_list {
    background: #fff;
}

.all_search {
    height: 100rpx;
    padding: 44rpx 0 16rpx 34rpx;
    font-size: 14px;
    color: #9B9B9B;
    border-bottom: 1px solid #EBEBEB;
}

.question_link {
    position: relative;
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 32rpx;
    color: #333;
    font-size: 12px;
    border-top: 1px solid #EBEBEB;
}

.question_link:first-of-type {
    border-top: 0;
}

.icon_right.angle {
    position: absolute;
    top: 36rpx;
    right: 32rpx;
    opacity: .5;
    width: 18rpx;
    height: 18rpx;
}

.upgrade_tip {
    height: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    color: #333;
}

.icon_info {
    margin-right: 18rpx;
}

.no_content {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 74px;
}

.no_img {
    width: 280rpx;
    height: 280rpx;
    display: block;
}

.no_q {
    display: block;
    margin-top: 10px;
    font-size: 16px;
    color: #333;
}

.change_key {
    margin-top: 4px;
    font-size: 12px;
    color: #999;
}