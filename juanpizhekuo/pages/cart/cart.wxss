@import "../../components/get-coupon/index.wxss";

@import "../../components/goods/goods.wxss";

@import "common/index.wxss";

@import "../../components/goods-list/index.wxss";

page,.container,.cart-box {
    height: 100%;
}

.fan-tip {
    display: flex;
    align-items: center;
    height: 32px;
    padding-left: 10px;
    background-color: #fff4e5;
    font-size: 12px;
    color: #ff7700;
}

.fan-tip image {
    width: 18px;
    height: 18px;
    margin-right: 6px;
}

.lose__efficacy {
    padding: 20rpx 0;
    background: #fff;
}

.lose__good__item {
    display: flex;
    height: 220rpx;
    justify-content: center;
    align-items: center;
    background: #fff;
    padding-bottom: 20rpx;
}

.lose__good__tag {
    margin: 0 20rpx;
    width: 48rpx;
    text-align: center;
    font-size: 10px;
    color: #fff;
    background: #bbb;
}

.lose__good__item .good__info1 {
    font-size: 13px;
    color: #bbb;
    justify-content: flex-start;
}

.lose__good__item .good__info3 {
    font-size: 12px;
    color: #666;
    text-align: left;
    justify-content: flex-start;
}

.lose__btn {
    margin: 0 auto;
    width: 216rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 14px;
    color: #666;
    border: 1px solid #999;
}

.vip-mark {
    border: 1px solid transparent;
    font-size: 11px;
    border-radius: 1px;
    padding: 1px 2px;
    display: inline-block;
    margin-left: 4px;
    line-height: 1;
    vertical-align: top;
    color: #FFE8AB;
}