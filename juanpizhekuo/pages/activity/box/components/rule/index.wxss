.dialog {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 999999999;
}

.dialog-ceng {
    background: #000;
    opacity: 0.7;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.dialog-content {
    background: linear-gradient(-90deg,#e1433f 0%,#f75854 37%,#f75854 59%,#e1433f 100%);
    border-radius: 8rpx;
    width: 580rpx;
    height: 750rpx;
    position: fixed;
    top: 40%;
    left: 50%;
    transform: translate(-50%,-40%);
    padding: 0 30rpx;
}

.dialog-close {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.dialog-close .icons-close {
    width: 36rpx;
    height: 36rpx;
}

.dialog-title {
    color: #fff;
    font-size: 36rpx;
    padding-top: 48rpx;
    margin-bottom: 28rpx;
    text-align: center;
    font-weight: bold;
}

.rules {
    height: 600rpx;
}

.rules .rules-item {
    color: #fff;
    text-align: justify;
    margin-bottom: 24rpx;
}

.rules .rules-info {
    font-size: 28rpx;
    line-height: 44rpx;
    word-break: break-all;
}