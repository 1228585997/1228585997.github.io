.sub-cate-box {
    padding: 10px 15px;
    border-top: 1px solid #ebebeb;
    display: flex;
    flex-wrap: nowrap;
    overflow: scroll;
    box-sizing: border-box;
}

.sub-cate-box.sumarket {
    padding: 0;
    border-top: none;
    display: flex;
    flex-wrap: nowrap;
    overflow: scroll;
    box-sizing: border-box;
    background: #fff;
    justify-content: space-between;
}

.sub-cate-item {
    padding: 5px 10px;
    font-size: 12px;
    color: #4a4a4a;
    background: #fff;
    border: 1px solid #dcdcdc;
    margin-right: 15px;
    white-space: nowrap;
    border-radius: 2px;
}

.sub-cate-box.sumarket .sub-cate-item {
    border: none;
    border-radius: 0;
    line-height: 40px;
    padding: 0 10px;
    margin: 0;
}

.sub-cate-item.active {
    border: 1px solid #ff464e;
    color: #ff464e;
}

.sub-cate-box.sumarket .sub-cate-item.active {
    border-bottom: 1px solid #ff464e;
    color: #ff464e;
}

.goods-wrap {
    height: 100%;
    position: absolute;
}

.banner {
    width: 100%;
    height: 290rpx;
}