.filter-box {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 9;
    width: 100%;
    height: 100%;
}

.filter-box__shadow {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.5);
}

.filter-box__content {
    position: absolute;
    right: 0;
    top: 0;
    z-index: 2;
    width: 85%;
    height: 100%;
    padding: 0 24px 48px 24px;
    background-color: #fff;
}

.price-section {
    margin-top: 32px;
}

.filter-title {
    font-size: 14px;
    color: #333;
    margin-bottom: 16px;
}

.filter-input {
    display: flex;
    justify-content: center;
    align-items: center;
}

.filter-input text {
    margin: 0 10px;
    color: #999;
}

.filter-input input {
    height: 32px;
    line-height: 32px;
    text-align: center;
    background: #f4f4f8;
    border-radius: 2px;
    font-size: 13px;
}

.filter-input .input-placeholder {
    color: #bbb;
}

.cate-list {
    margin-top: 36px;
}

.cate-list .cate {
    display: flex;
    flex-wrap: wrap;
}

.filter .cate {
    display: flex;
    flex-wrap: wrap;
}

.cate .cate-item {
    width: 30%;
    margin-bottom: 14px;
    height: 32px;
    line-height: 32px;
    text-align: center;
    background: #f4f4f8;
    border-radius: 2px;
    box-sizing: border-box;
    border: 1px solid #f4f4f8;
    font-size: 12px;
    color: #333;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.cate-item:nth-child(3n-1) {
    margin: 0 5%;
}

.cate .cate-item.active {
    background: #fff;
    color: #ff464e;
    border: 1px solid #ff464e;
}

.filter-action {
    height: 48px;
    line-height: 48px;
    border-top: 1px solid #ebebeb;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    bottom: 0;
    left: 0;
    font-size: 16px;
    width: 100%;
}

.filter-action .reset {
    width: 50%;
    text-align: center;
    background: #fff;
}

.filter-action .ok {
    width: 50%;
    background: #ff464e;
    color: #fff;
    text-align: center;
}