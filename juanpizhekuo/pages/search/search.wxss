page {
    background-color: #ffffff;
}

.search-header {
    position: absolute;
    width: 100%;
}

.search-info {
    padding-top: 40px;
}

.search-fuzzy .item {
    width: 100%;
    height: 40px;
    padding: 8px 15px 8px 15px;
    border-bottom: #ebebeb 1px solid;
    background: #ffffff;
    display: block;
}

.search-tags {
    padding: 0 15px 0 15px;
}

.search-tags .title {
    width: 100%;
    height: 44px;
    padding: 14px 0 10px 0;
    font-size: 14px;
    font-weight: 400;
    color: #999999;
    clear: both;
}

.search-tags .title .remove-icon {
    float: right;
    width: 20px;
    height: 20px;
}

.search-tags tags {
    display: flex;
    flex-wrap: wrap;
}

.search-tags .tag {
    margin: 0 10px 10px 0;
    padding: 5px 10px;
    background: #F4F4F8;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 400;
    color: #666666;
    display: inline-block;
}

.search-tags .red {
    color: #FF464E;
}

.quick-sort-holder {
    height: 80px;
}

.fixed {
    width: 100%;
    position: fixed;
    z-index: 3;
}