@import "../../components/loadmore1/loadmore.wxss";

@import "../../components/backtop/backtop.wxss";

@import "../../components/blockAds/index.wxss";

@import "../../components/countdown/countdown.wxss";

@import "../../components/bottom-menu/index.wxss";

page,.container,scroll-view {
    height: 100%;
}

.swiper-place {
    width: 100%;
    height: 40px;
}

.swiper-container {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 3;
    width: 100%;
    height: 40px;
    background: #30363c;
}

.swiper-box {
    width: 100%;
    overflow: hidden;
}

.cur-item {
    width: 20%;
    position: absolute;
    left: 40%;
    height: 40px;
    background: #ff464e;
    top: 0;
    z-index: 1;
}

.cur-item .down {
    position: absolute;
    bottom: -5px;
    left: 0;
    right: 0;
    z-index: 18;
    display: block;
    height: 0;
    width: 0;
    margin: auto;
    border-top: 5px solid #ff464e;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
}

.swiper {
    white-space: nowrap;
    height: 40px;
    position: relative;
    z-index: 2;
}

.we-slide {
    color: #6b6b6b;
    height: 40px;
    display: inline-block;
    text-align: center;
    vertical-align: middle;
}

.we-slide:nth-child(2) .time {
    font-size: 13px;
}

.we-slide.active {
    color: #fff;
    font-weight: bold;
}

.we-slide .time {
    margin-top: 5px;
    font-size: 15px;
    display: block;
    line-height: 1;
}

.we-slide .txt {
    font-size: 11px;
    display: block;
    line-height: 1;
    margin-top: 3px;
}

.we-empty-slide {
    font-size: 14px;
    color: #fff;
    line-height: 40px;
    text-align: center;
    display: inline-block;
}

.tab-time {
    height: 44px;
    line-height: 44px;
    background: #fff;
    border-bottom: 1px solid #efefef;
    text-align: center;
    font-size: 14px;
    color: #333;
}

.cate-tab {
    width: 100%;
    line-height: 40px;
    font-size: 0;
    color: #353535;
    border-bottom: 1px solid #ebebeb;
    overflow-x: scroll;
    overflow-y: hidden;
    background: #fff;
    white-space: nowrap;
}

.cate-tab-btn {
    display: inline-block;
    height: 40px;
    font-size: 14px;
    padding-left: 2.5px;
    padding-right: 2.5px;
    margin-left: 12px;
    margin-right: 12px;
    text-align: center;
    vertical-align: middle;
}

.cate-tab-btn__active {
    color: #ff464e;
    border-bottom: 2px solid #ff464e;
}

.goods-ad {
    display: block;
    width: 100%;
}

.goods-item {
    padding: 14px;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    border-bottom: 1px solid #ebebeb;
}

.goods-item .img {
    width: 95px;
    height: 95px;
    position: relative;
}

.goods-item .img image {
    width: 95px;
    height: 95px;
}

.goods-item .img .jiao {
    position: absolute;
    top: 0;
    left: 0;
    width: 70rpx;
    height: 70rpx;
}

.goods-item .img .over {
    height: 18px;
    line-height: 18px;
    background-color: rgba(0,0,0,0.65);
    text-align: center;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    font-size: 12px;
    color: #fff;
}

.goods-item .goods-info {
    margin-left: 12px;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 95px;
}

.goods-info .title {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 14px;
    color: #333;
}

.goods-info .info-bottom {
    display: flex;
    justify-content: center;
    align-items: flex-end;
}

.info-bottom .info-box {
    flex: 1;
}

.info-bottom .info-box .limit-count {
    color: #44cc44;
    font-size: 12px;
    height: 28rpx;
    line-height: 28rpx;
    text-align: left;
    margin-bottom: 6rpx;
}

.info-bottom .info-box .price {
    font-size: 12px;
    color: #ff464e;
}

.info-bottom .info-box .icon {
    font-size: 12px;
    margin-left: 5px;
}

.info-bottom .info-box .cprice {
    font-size: 20px;
    margin-right: 5px;
}

.info-bottom .info-box .oprice {
    font-size: 10px;
    color: #bbb;
    text-decoration: line-through;
}

.progress {
    width: 260rpx;
    height: 28rpx;
    line-height: 28rpx;
    border-radius: 28rpx;
    background: #ffb1b4;
    text-align: center;
    overflow: hidden;
    position: relative;
}

.progress-over {
    width: 260rpx;
    height: 28rpx;
    line-height: 28rpx;
    border-radius: 28rpx;
    background: rgba(0,0,0,0.4);
    text-align: center;
    font-size: 10px;
    color: #fff;
}

.progress .cover-bar {
    width: 100%;
    height: 28rpx;
    border-radius: 28rpx;
    background: #FF464E;
    transition: transform 1s;
    transition: transform 1s,-webkit-transform 1s;
}

.progress.needAni .cover-bar {
    transform: translateX(-100%);
}

.progress.needAni.ani .cover-bar {
    transform: translateX(0);
}

.progress .txt {
    font-size: 12px;
    color: #fff;
    font-style: normal;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    display: inline-block;
    text-align: center;
    width: 100%;
    height: 28rpx;
    line-height: 28rpx;
}

.progress .txt .fire-icon {
    display: inline-block;
    vertical-align: middle;
    width: 18rpx;
    height: 20rpx;
    margin-right: 5rpx;
    margin-top: -1px;
}

.info-bottom .btn-box {
    position: relative;
    width: 144rpx;
}

.btn-box .people_enter {
    position: absolute;
    right: -28rpx;
    bottom: 60rpx;
    width: 200rpx;
    color: #44cc44;
    font-size: 12px;
    height: 28rpx;
    line-height: 28rpx;
    text-align: center;
}

.btn-box .people-count {
    font-size: 10px;
    color: #00aa22;
    margin-bottom: 8rpx;
    text-align: center;
}

.btn-box .btn {
    width: 144rpx;
    height: 56rpx;
    line-height: 56rpx;
    background: #ff464e;
    border-radius: 4rpx;
    font-size: 12px;
    color: #fff;
    text-align: center;
}

.btn.collect {
    background: #17cc63;
}

.btn.collected {
    border: 1px solid #00aa22;
    background: #fff;
    color: #00aa22;
}

.btn.over {
    background: #fff;
    border: 1px solid #ff464e;
    color: #ff464e;
}

.btn.hasEnshrined {
    border: 1px solid #00aa22;
    background: #fff;
    color: #00aa22;
}

.back-top {
    bottom: 124rpx;
}