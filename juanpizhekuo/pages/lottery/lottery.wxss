@import "../pinhaohuo/goods/index.wxss";

@import "../../components/backtop/backtop.wxss";

page,.container {
    height: 100%;
}

.goods__item {
    padding: 28rpx;
    background: #fff;
    display: flex;
    justify-content: center;
    height: 196rpx;
}

.goods__image {
    width: 140rpx;
    height: 140rpx;
}

.goods__image image {
    width: 140rpx;
    height: 140rpx;
}

.goods__info {
    margin-left: 20rpx;
    flex: 1;
    position: relative;
}

.goods__info .title {
    font-size: 14px;
    color: #333;
}

.goods__info .price__box {
    position: absolute;
    bottom: 0;
}

.goods__info .price__box .tag {
    font-size: 12px;
    color: #999;
}

.goods__info .price__box .price {
    color: #ff464e;
    font-size: 16px;
}

.lottery__item {
    padding: 0 28rpx 28rpx 28rpx;
    background: #fff;
    margin-top: 20rpx;
    text-align: center;
}

.lottery__item .lottery__status {
    width: 200rpx;
    height: 200rpx;
    margin: 0 auto;
}

.lottery__item .lottery__star {
    width: 68rpx;
    height: 16rpx;
    vertical-align: middle;
}

.lottery__item .lottery__text {
    font-size: 18px;
    color: #4a4a4a;
    vertical-align: middle;
    margin: 0 10rpx;
}

.lottery__item .lottery__no {
    font-size: 14px;
    color: #999;
    margin: 20rpx 0;
}

.lottery__item .look_lottery {
    width: 400rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 14px;
    color: #ff464e;
    border-radius: 2px;
    border: 1px solid #ff464e;
    display: inline-block;
}

.lottery__item .coupon__image {
    width: 100%;
    margin-bottom: 20rpx;
}

.lottery__item .lottery__tip {
    font-size: 14px;
    color: #4a4a4a;
    padding: 20rpx 46rpx 26rpx 46rpx;
}

.lottery__people {
    padding: 28rpx;
    background: #fff;
    margin-top: 20rpx;
}

.lottery__people .title {
    font-size: 16px;
    color: #333;
    text-align: center;
}

.lottery__people .time {
    font-size: 12px;
    color: #999;
    text-align: center;
    margin: 16rpx 0 28rpx 0;
}

.people__list__head {
    margin: 0 28rpx;
    background: #f7f7f7;
    padding: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 14px;
    color: #999;
}

.people__list__head .head1 {
    text-align: left;
    flex: 1;
}

.people__list__head .head2 {
    text-align: right;
    flex: 1;
}

.rule__item {
    background: #fff;
    padding: 28rpx;
    margin-top: 20rpx;
}

.rule__item__info {
    display: flex;
    justify-content: center;
    align-items: center;
}

.rule__item__info .tip1 {
    font-size: 14px;
    color: #4a4a4a;
    flex: 1;
}

.rule__item_list {
    margin-top: 20rpx;
    font-size: 12px;
    color: #666;
}

.rule__item_list .num:first-child {
    margin-left: 0;
}

.rule__item_list .num {
    width: 24rpx;
    height: 24rpx;
    line-height: 24rpx;
    text-align: center;
    border-radius: 50%;
    background: #bbb;
    color: #fff;
    display: inline-block;
    margin-right: 10rpx;
    margin-left: 20rpx;
}

.people__item {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20rpx;
    margin: 0 28rpx;
    border-bottom: 1px solid #ebebeb;
}

.people__item:last-child {
    border-bottom: none;
}

.people__item .head_icon {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.people__item .name {
    font-size: 14px;
    color: #333;
    flex: 1;
    margin-left: 20rpx;
}

.people__item .phone {
    font-size: 12px;
    color: #999;
}

.lottery__people .people__more {
    font-size: 12px;
    color: #6b6b6b;
    text-align: center;
    margin-top: 20rpx;
}

.grouping-title {
    width: 100%;
    text-align: center;
    height: 96rpx;
    line-height: 96rpx;
}