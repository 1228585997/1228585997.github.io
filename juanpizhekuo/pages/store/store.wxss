page,.container {
    height: 100%;
    background-color: #efeff4;
}

.store {
    position: relative;
    height: 108px;
    color: #fff;
    padding-left: 14px;
    padding-right: 14px;
    padding-top: 49px;
}

.store-bg {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
    width: 100%;
    height: 100%;
}

.store-info {
    position: relative;
    z-index: 3;
    display: flex;
    align-items: center;
}

.store-info__logo {
    flex-shrink: 0;
    width: 45px;
    height: 45px;
    padding-top: 12px;
    border: .5px solid #e7e7e7;
    background-color: #fff;
}

.store-info__logo image {
    width: 100%;
    height: 20px;
}

.store-info__info {
    padding-left: 10px;
    flex: 1;
    max-width: 90%;
    font-size: 16px;
    line-height: 1.4;
}

.store-info__span {
    margin-top: 6px;
    font-size: 12px;
    opacity: .5;
}

.store-actinfo {
    padding-left: 14px;
    padding-right: 14px;
    padding-bottom: 5px;
    overflow: hidden;
    background-color: #fff;
}

.icon-span {
    display: inline-block;
    line-height: 28rpx;
    height: 28rpx;
    font-size: 20rpx;
    padding-left: 2px;
    padding-right: 2px;
    border-radius: 1px;
    margin-right: 4rpx;
}