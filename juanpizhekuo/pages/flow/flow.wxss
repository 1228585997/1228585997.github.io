page {
    height: 100%;
    background-color: #fff;
}

.flow-container {
    height: 100%;
    padding-left: 14px;
    padding-right: 14px;
}

.flow-container__img {
    margin-left: 10px;
    margin-right: 10px;
    margin-top: 14px;
    margin-bottom: 18px;
}

.flow-container__img image {
    width: 100%;
}

.flow-container__item {
    padding-bottom: 16px;
    line-height: 1.4;
    font-size: 13px;
    color: #9b9b9b;
}

.flow-container__item text {
    color: #3f3f3f;
}

.flow-container__line {
    padding-top: 14px;
    padding-bottom: 14px;
    border-bottom: 1px dashed #ebebeb;
    color: #666;
}