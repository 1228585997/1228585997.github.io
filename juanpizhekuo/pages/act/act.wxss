page,.act-container {
    background-color: #fff;
}

.hasBottomNav {
    display: block;
    width: 100%;
    height: 100rpx;
    background-color: transparent;
}

.back-top {
    position: fixed;
    bottom: 75px;
    right: 12px;
    z-index: 3;
    width: 46px;
    height: 50px;
    transition: all 0.5s ease;
}

.back-top image {
    width: 100%;
    height: 100%;
}

.backtop-true {
    opacity: 0;
    transform: translateY(100%);
}

.backtop-false {
    opacity: 1;
    transform: translateY(0);
}