.gc-component {
    position: relative;
    width: 750rpx!important;
    height: 260rpx!important;
    font-size: 24rpx;
    color: #555;
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

.gc-component__container {
    position: absolute;
    top: 40rpx;
    right: 36rpx;
    width: 468rpx;
    height: 180rpx;
    padding-left: 40rpx;
    padding-right: 20rpx;
    padding-top: 10rpx;
    background-image: url(https://act.juancdn.com/common/images/goods_comment_bg.png);
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.gc-component__comments {
    position: relative;
    height: 120rpx;
    overflow: hidden;
}

.gc-component__animation {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
}

.gc-component__item {
    display: block;
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-top: 0;
    margin-bottom: 0;
}

.gc-component__title {
    color: #888;
    line-height: 40rpx;
    font-size: 22rpx;
}