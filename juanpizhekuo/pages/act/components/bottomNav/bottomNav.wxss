.bottomnav {
    display: flex;
    position: fixed;
    z-index: 150;
    right: 0;
    bottom: 0;
    left: 0;
    max-width: 100%;
    height: 100rpx;
}

.bottomnav__mask {
    position: fixed;
    z-index: 110;
    top: 0;
    right: 0;
    bottom: 100rpx;
    left: 0;
}

.bottomnav .mask {
    bottom: 100rpx;
    background-color: rgba(0,0,0,0.6);
}

.bottomnav .mask-pane {
    bottom: -100%;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    transform: none;
    background-color: transparent;
}

.bottomnav__close {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    height: 80rpx;
}