.modal {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background-color: rgba(0,0,0,.7);
    overflow: auto;
    z-index: 300;
    display: none;
}

.modal__border {
    position: absolute;
    padding: 10rpx 24rpx;
    width: 566rpx;
    max-width: 750rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    background-color: #fff;
    border-radius: 8rpx;
    box-shadow: 0 0 0 10rpx #fff;
}

.modal__border:after {
    content: "";
    position: absolute;
    right: 0;
    bottom: 0;
    left: 0;
    height: 40rpx;
    background-image: linear-gradient(hsla(0,0%,100%,0),#fff);
    border-radius: 8rpx;
}

.modal__window {
    max-height: 700rpx;
    overflow-y: auto;
    overflow-x: hidden;
    border-radius: 10rpx;
    padding: 20rpx 0;
    -webkit-overflow-scrolling: touch;
}

@media (max-height:480rpx) {
    .modal__window {
        max-height: 700rpx;
    }
}

.modal__close {
    position: absolute;
    right: 12rpx;
    top: 12rpx;
    width: 38rpx;
    height: 38rpx;
    z-index: 2;
    border-width: 2rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 32rpx;
    font-size: 34rpx;
}

.modal__body {
    font-size: 24rpx;
    line-height: 36rpx;
    text-align: justify;
    color: #888;
}

.modal__body .modal__txt {
    padding-left: 4rpx;
}

.modal__title {
    height: 34rpx;
    line-height: 34rpx;
    font-size: 36rpx;
    font-weight: bold;
    text-align: center;
    margin: 20rpx 0;
}

.modal__btn {
    width: 218rpx;
    height: 66rpx;
    line-height: 66rpx;
    margin: 20rpx auto 0;
    text-align: center;
    font-size: 32rpx;
    border-radius: 10rpx;
    cursor: pointer;
    color: #fff;
}

.modal.open {
    display: block;
}