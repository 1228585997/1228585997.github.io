.STL {
    min-height: 414rpx;
    background-size: '100% 100%';
}

.STL__header {
    height: 80rpx;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    position: relative;
}

.STL__title {
    font-size: 32rpx;
    margin-right: 20rpx;
    color: #4a4a4a;
}

.STL__morelink {
    font-size: 28rpx;
    color: #aaa;
    position: absolute;
    right: 30rpx;
}

.STL__scroll-view {
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
}

.STL__goods {
    display: table;
    margin-left: 20rpx;
}

.STL__good {
    display: table-cell;
}

.STL__link {
    display: block;
    position: relative;
    width: 260rpx;
    height: 344rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    background-color: #fff;
}

.STL__good-img {
    position: relative;
}

.STL__good-img image {
    display: block;
    width: 260rpx;
    height: 260rpx;
}

.STL__good-prices {
    display: flex;
    height: 40rpx;
    align-items: center;
    margin-top: 10rpx;
}

.STL__good-cprice {
    font-size: 28rpx;
    color: #ff464e;
}

.STL__good-oprice {
    font-size: 20rpx;
    color: #bbb;
    margin-left: 8rpx;
    text-decoration: line-through;
}

.STL__good-title {
    height: 34rpx;
    line-height: 34rpx;
    font-size: 24rpx;
    color: #333;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.STL__good-btn {
    width: 240rpx;
    height: 44rpx;
    line-height: 44rpx;
    text-align: center;
    background-color: #ff464e;
    color: #fff;
    font-size: 24rpx;
    border-radius: 4rpx;
    margin-top: 10rpx;
}

.STL__good-btn--disabled {
    background-color: #cdcdcd;
}

.STL__good-jiao {
    position: absolute;
    left: 0;
    top: 0;
}

.STL__good--P2 .STL__link {
    height: 364rpx;
}

.STL__good--P2 .STL__good-prices,.STL__good--P2 .STL__good-title {
    padding: 0 12rpx;
}

.STL__good--P3 .STL__link {
    height: 404rpx;
}

.STL__good--P3 .STL__good-title {
    margin-top: 7rpx;
}

.STL__good--P3 .STL__good-prices {
    margin-top: 0;
}

.STL__good--P3 .STL__good-prices,.STL__good--P3 .STL__good-title {
    padding: 0 12rpx;
}

.STL__good--P3 .STL__good-btn {
    margin-left: 10rpx;
    margin-right: 10rpx;
    margin-bottom: 8rpx;
}

.STL__counting {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.STL__counting .times {
    justify-content: flex-start;
    align-items: center;
}

.STL__counting .time__days,.STL__counting .time__hours,.STL__counting .time__minutes,.STL__counting .time__seconds {
    display: inline-block;
    vertical-align: 5%;
    width: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    text-align: center;
    background-color: #4a4a4a;
    border-radius: 4rpx;
    color: #fff;
    font-size: 24rpx;
    font-family: arial;
}

.STL__counting .time {
    justify-content: flex-start;
    align-items: center;
    width: 24rpx;
    height: 36rpx;
}

.STL__counting .time__days__text,.STL__counting .time__hours__text,.STL__counting .time__minutes__text {
    margin: 0 6rpx;
    font-size: 24rpx;
}