.subscribe__modal {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background-color: rgba(0,0,0,.7);
    overflow: auto;
    z-index: 300;
    display: none;
}

.subscribe__modal__close {
    position: absolute;
    right: 0rpx;
    top: -72rpx;
    width: 60rpx;
    height: 60rpx;
    z-index: 2;
    background-image: url('https://act.juancdn.com/jpwebapp/common/images/icon-close.png');
    background-size: 100% 100%;
}

.subscribe__modal__body {
    position: absolute;
    width: 632rpx;
    margin: 0 auto;
    left: 0;
    right: 0;
    top: 30%;
}

.subscribe__modal.open {
    display: block;
}