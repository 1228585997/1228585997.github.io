.slide-image {
    width: 100%;
    height: 100%;
}

.slide-navigator {
    width: 100%;
    height: 100%;
}

.card-container {
    display: block;
    position: relative;
}

.card-container swiper {
    height: 100%;
    width: 100%;
}

.card-container swiper-item image {
    width: 100%;
    max-height: 100%;
}

.wx-swiper-dot {
    width: 14rpx!important;
    height: 14rpx!important;
    border-radius: 7rpx;
    display: inline-flex;
    margin-left: 2rpx;
    justify-content: space-between;
}

.card-container .wx-swiper-dots.wx-swiper-dots-horizontal {
    bottom: 10rpx;
    position: absolute;
}