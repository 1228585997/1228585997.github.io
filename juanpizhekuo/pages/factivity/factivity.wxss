@import "../../components/factivity-goods/factivity-goods.wxss";

@import "../../components/sku/sku.wxss";

@import "../../components/loadmore1/loadmore.wxss";

@import "../../components/goods/quick-sort/quick-sort.wxss";

@import "../search/filter/filter.wxss";

.container {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    display: flex;
    flex-direction: column;
}

.factivity-box {
    border-bottom: 1px solid #ebebeb;
    padding: 0 14px 10px 14px;
    background: #fff;
}

.factivity-box-item {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-top: 10px;
}

.factivity-tag {
    padding: 0 2px;
    border: 1px solid #ff464e;
    font-size: 10px;
    color: #ff464e;
    height: 14px;
    line-height: 14px;
    white-space: nowrap;
}

.factivity-txt {
    font-size: 12px;
    color: #333;
    margin-left: 8px;
}

.sort-box {
    border-bottom: 1px solid #ebebeb;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px 0;
}

.sort-item {
    flex: 1;
    font-size: 14px;
    color: #333;
    display: flex;
    justify-content: center;
    align-items: center;
}

.sort-item.active {
    color: #ff464e;
}

.sort-item-up {
    width: 0;
    height: 0;
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
    border-bottom: 4px solid;
    margin-left: 4px;
    color: #999;
}

.sort-item-down {
    width: 0;
    height: 0;
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
    border-top: 4px solid;
    margin-left: 4px;
    margin-top: 3px;
    color: #999;
}

.sort-item-up.active,.sort-item-down.active {
    color: #ff464e;
}

.goods-box {
    overflow: hidden;
}

.filter-image {
    width: 10px;
    height: 10px;
    display: inline-block;
    vertical-align: middle;
    margin-left: 2px;
}

.quick-sort__cates-wrapper {
    top: 40px;
}