@import "components/rate.wxss";

.evaluate {
    padding: 28rpx 32rpx;
    background: #fff;
    margin-top: 22rpx;
}

.Handle {
    padding-bottom: 48rpx;
    display: -webkit-flex;
    align-items: center;
}

.textarea-box {
    min-height: 240rpx;
    position: relative;
    margin-bottom: 32rpx;
    padding-bottom: 64rpx;
    box-sizing: border-box;
    padding: 20rpx;
    border: 1rpx solid #E7E7E7;
}

.textarea-box .textarea-len {
    position: absolute;
    color: #999;
    right: 24rpx;
    bottom: 20rpx;
}

.textarea-box textarea {
    height: 100px;
}

.SubmitRate {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
    font-size: 36rpx;
    color: #fff;
    background: #FF464E;
}