page,.container {
    height: 100%;
    color: #333;
}

.container {
    height: 100%;
    position: relative;
    color: #333;
    font-size: 14px;
    line-height: 20px;
}

.container .time {
    color: #9b9b9b;
    line-height: 18px;
    font-size: 12px;
    margin-top: 10px;
}

.container .text {
    margin-bottom: 8px;
    word-wrap: break-word;
    word-break: break-all;
}

.container .images {
    overflow: hidden;
}

.container .images image {
    width: 60px;
    height: 60px;
    margin-right: 10px;
}

.container .images image:last-child {
    margin-right: 0;
}

.container .box-item {
    padding: 18px 14px 20px;
    box-sizing: border-box;
    background-color: #fff;
}

.container .service-box {
    padding-top: 7px;
}

.service-box .service-title text {
    color: #ff464e;
}

.service-box .service-box-outer {
    background-color: #f7f7f7;
    border-radius: 4px;
    padding: 10px 12px 15px;
    position: relative;
}

.service-box .service-box-outer:after {
    content: '';
    width: 0;
    height: 0;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-bottom: 7px solid #f7f7f7;
    position: absolute;
    left: 20px;
    top: -7px;
}

.big-pic-mode {
    height: 100%;
    width: 100%;
    background-color: rgba(0,0,0,.75);
}

.big-pic-mode swiper {
    height: 100%;
    width: 100%;
}

.big-pic-mode swiper-item {
    display: flex;
    align-items: center;
}

.big-pic-mode swiper-item image {
    width: 100%;
    max-height: 100%;
}

.big-pic-mode .indicator {
    position: fixed;
    left: 0;
    top: 40px;
    z-index: 3;
    width: 100%;
    text-align: center;
}

.big-pic-mode .indicator text {
    display: inline-block;
    height: 20px;
    line-height: 20px;
    padding-left: 10px;
    padding-right: 10px;
    background-color: rgba(0,0,0,.75);
    border-radius: 10px;
    color: #fff;
}