page {
    border-top: none;
    position: relative;
}

.total_score {
    width: 100%;
    height: 130px;
    background-color: #26A8FF;
    box-sizing: border-box;
    padding: 28px 0 0 24px;
    position: relative;
    overflow: hidden;
}

.total_score .total_score_title {
    height: 20px;
    line-height: 20px;
    opacity: 0.8;
    font-size: 14px;
    color: #FFFFFF;
    letter-spacing: 0;
}

.total_score .money {
    font-family: .SFNSDisplay;
    font-size: 44px;
    color: #FFFFFF;
    height: 62px;
    line-height: 62px;
}

.total_score::after {
    content: '';
    display: block;
    height: 1px;
    background: #fff;
    opacity: 0.3;
    width: 100%;
    position: absolute;
    bottom: 0px;
    left: 5%;
    right: 0;
}

.money_detail {
    width: 100%;
    height: 101px;
    background-color: #26A8FF;
}

.cash,.shopping_fund {
    width: 50%;
    float: left;
    box-sizing: border-box;
    padding: 24px 0 0 24px;
}

.line1 {
    opacity: 0.8;
    font-family: .AppleSystemUIFont;
    font-size: 14px;
    color: #FFFFFF;
}

.line1 .getCashNoney {
    opacity: 0.8;
    font-family: .AppleSystemUIFont;
    font-size: 10px;
    color: #FFFFFF;
    background: #1290E4;
    border-radius: 100px;
    display: inline-block;
    width: 40px;
    line-height: 16px;
    height: 16px;
    text-align: center;
}

.line2 {
    font-family: .SFNSDisplay;
    font-size: 24px;
    color: #FFFFFF;
}

.question {
    width: 16px;
    height: 16px;
    line-height: 16px;
    display: inline-block;
    vertical-align: top;
}

.question image {
    width: 12px;
    height: 12px;
    margin: 2px auto 0;
}

.toGetCash,.myPoints {
    width: 32px;
    height: 32px;
}

.cell-row {
    border-width: 1px 0;
    line-height: 60px;
    height: 60px;
    background: #fff;
    padding: 0 15px;
    position: relative;
    font-size: 16px;
    color: #4A4A4A;
    letter-spacing: 0;
}

.cell-row__footer {
    color: #888;
    position: absolute;
    right: 10px;
    top: 50%;
    transform: translateY(-50%);
}

.cell-row .angle {
    color: #C7C7CC;
}

.nav_title {
    text-align: left;
    display: inline-block;
    position: absolute;
    width: 200px;
    height: 100%;
    top: 0;
    left: 65px;
}

.border_none::after {
    display: none;
}

.balanceStatement {
    position: fixed;
    bottom: 32px;
    left: 40%;
    height: 16px;
    line-height: 16px;
    font-family: PingFangSC-Regular;
    font-size: 14px;
    color: #6B6B6B;
    line-height: 16px;
    box-sizing: border-box;
    padding-left: 20px;
}

.balanceStatement .wenhao {
    position: absolute;
    top: 1px;
    left: 0;
    width: 14px;
    height: 14px;
    display: inline-block;
}