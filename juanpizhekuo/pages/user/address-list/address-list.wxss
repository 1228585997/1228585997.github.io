page {
    background-color: #f4f4f8;
}

.cell--detail .cell {
    padding: 28rpx 36rpx;
}

.cell--detail .cell::after {
    left: 36rpx;
    right: 36rpx;
}

.cell__address {
    display: flex;
    align-items: center;
}

.icon {
    height: 18px;
    width: 18px;
}

.cell__head radio {
    position: absolute;
    opacity: 0;
}

.cell__body {
    flex: 1;
    padding: 0 28rpx 0 16rpx;
}

.address__detail {
    font-size: 24rpx;
    margin-top: 16rpx;
    line-height: 1.4;
}

.btn-edit {
    padding: 20rpx;
    margin-right: -20rpx;
}

.cell--detail .cell__new {
    width: 100%;
    padding: 48rpx 96rpx 0 96rpx;
    margin: 0;
    background-color: #f4f4f8;
}

.address_addButton {
    width: 240rpx;
    float: left;
}

.address_addButton button {
    width: 100%;
    height: 36px;
    line-height: 36px;
    font-size: 14px;
    padding: 0;
    text-align: center;
    border-radius: 4px;
}

.address_addButton2 {
    float: right;
}

.address_addButton .WXaddress {
    background-color: #1AAD19;
    color: #fff;
    border: none;
}

.cell__last {
    height: auto;
    overflow: hidden;
}

.empty_address_pic {
    width: 100%;
    background-color: #f4f4f8;
}

.empty_address_pic .EApicture {
    display: block;
    width: 140px;
    height: 140px;
    margin: 40px auto 20px;
}

.empty_address_pic .empty_tips {
    width: 100%;
    height: auto;
    font-size: 16px;
    color: #333333;
    line-height: 26px;
    text-align: center;
    margin: 0px auto;
}