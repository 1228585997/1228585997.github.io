.form-box {
    padding: 0 18px;
    background: #fff;
}

.form-box .title {
    padding: 14px 0 10px 0;
    color: #333;
    font-size: 14px;
}

.form-box .input-box {
    padding-bottom: 10px;
}

.form-box .input-box textarea {
    padding: 10px;
    border: 1px solid #ebebeb;
    height: 100px;
}

.form-box .upload-box {
    padding-bottom: 10px;
    white-space: normal;
}

.form-box .upload-box .item {
    display: inline-block;
    position: relative;
    width: 63px;
    height: 63px;
    margin-right: 10px;
}

.form-box .upload-box .item image {
    width: 63px;
    height: 63px;
}

.form-box .upload-box .item:nth-child(5) {
    margin-right: 0;
}

.form-box .upload-box .item .close {
    position: absolute;
    top: 0;
    right: 0;
    height: 14px;
    width: 14px;
    text-align: center;
    line-height: 14px;
    background: rgba(0,0,0,0.3);
    font-size: 12px;
    color: #fff;
}