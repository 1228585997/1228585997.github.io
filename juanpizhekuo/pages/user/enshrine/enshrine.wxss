@import "../../../components/backtop/backtop.wxss";

@import "../../../components/sku/sku.wxss";

@import "../../../components/minicart/minicart.wxss";

@import "../../../components/loadmore1/loadmore.wxss";

@import "../../../components/goods-list/index.wxss";

page,.container {
    height: 100%;
    background-color: #efeff4;
}

.container {
    box-sizing: border-box;
}

.enshrine-box {
    position: relative;
    height: 100%;
}

.enshrine-tab {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 40px;
    line-height: 40px;
    font-size: 14px;
    color: #333;
    overflow: hidden;
    display: flex;
    text-align: center;
    background-color: #fff;
}

.enshrine-tab-left {
    width: 80%;
}

.enshrine-tab-right {
    width: 20%;
}

.tab-item {
    width: calc(100% / 4);
}

.enshrine-content {
    height: 100%;
    padding-top: 40px;
}

.content-redact_active {
    box-sizing: border-box;
    padding-bottom: 48px;
}

.enshrine-item {
    position: relative;
    background-color: #fff;
}

.enshrine-item-tab {
    background-color: transparent;
}

.item-state {
    color: #666;
    height: 40px;
    line-height: 40px;
    text-align: center;
}

.item-list {
    position: relative;
    background-color: #fff;
    transition: transform .6s;
    transition: transform .6s,-webkit-transform .6s;
    border-bottom: 1px solid #f4f4f4;
}

.item-list-radio {
    width: 18px;
    height: 18px;
    position: absolute;
    left: -26px;
    top: 50%;
    transform: translateY(-50%);
    border: 1px solid #9B9B9B;
    border-radius: 50%;
    box-sizing: border-box;
}

.item-list-radio image {
    width: 100%;
    height: 100%;
    display: none;
}

.item-list-radio-active {
    border: none;
}

.item-list-radio-active image {
    display: block;
}

.redact_active {
    transform: translateX(44px);
}

.item-list-shade {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 2;
}

.item-list-items {
    position: relative;
    width: 100%;
    box-sizing: border-box;
    padding: 14px;
    color: #b3b3b3;
    font-size: 14px;
    overflow: hidden;
    height: 100%;
}

.items-left {
    display: inline-block;
    width: 25%;
    position: relative;
    vertical-align: middle;
    margin-right: 10px;
}

.items-left:before {
    content: "";
    display: inline-block;
    padding-bottom: 100%;
    box-sizing: border-box;
    width: .1px;
    vertical-align: middle;
}

.items-left image {
    width: 100%;
    height: 100%;
    display: block;
    position: absolute;
    left: 0;
    top: 0;
}

.items-left .items-left-status {
    display: block;
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    background-color: rgba(0,0,0,.5);
    font-size: 12px;
    color: #fff;
    text-align: center;
    position: absolute;
    left: 0;
    bottom: 0;
}

.items-left .items-left-sign {
    width: 60rpx;
    height: 60rpx;
}

.items-right {
    position: relative;
    display: inline-block;
    width: calc(75% - 10px);
    height: 100%;
    vertical-align: middle;
}

.items-right:before {
    content: "";
    display: inline-block;
    padding-bottom: 35%;
    box-sizing: border-box;
    width: .1px;
    vertical-align: middle;
}

.items-h2 {
    width: 90%;
    line-height: 20px;
    display: -webkit-inline-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
    vertical-align: middle;
    color: #3b3b3b;
    position: absolute;
    left: 0;
    top: 0;
}

.items-tag {
    position: absolute;
    left: 0;
    top: 30%;
}

.items-tag text {
    font-size: 10px;
    padding: 0 2px;
    border: 1px solid #ff464e;
    color: #ff464e;
    display: inline-block;
    margin-right: 16rpx;
    vertical-align: middle;
}

.items-price {
    font-size: 16px;
    color: #ff464e;
    position: absolute;
    left: 0;
    bottom: 0;
    line-height: 26px;
}

.items-btn {
    position: absolute;
    right: 0;
    bottom: 0;
    border: 1px solid #ff464e;
    box-sizing: border-box;
    font-size: 12px;
    color: #ff464e;
    min-width: 72px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    padding: 0 5px;
    border-radius: 2px;
}

.enshrine-bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 48px;
    line-height: 48px;
    display: flex;
    font-size: 14px;
    color: #666;
    background-color: #fff;
}

.bottom-text {
    width: 65%;
    padding-left: 14px;
    box-sizing: border-box;
}

.bottom-text text {
    color: #ff464e;
}

.bottom-btn {
    width: 35%;
    background-color: #ff464e;
    color: #fff;
    font-size: 16px;
    text-align: center;
}

.enshrine-bottom-cart {
    position: absolute;
    bottom: 10px;
    left: 10px;
    width: 50px;
    height: 42px;
    box-sizing: border-box;
    background-color: rgba(0,0,0,.7);
    border-radius: 2px;
}

.enshrine-bottom-cart image {
    width: 24px;
    height: 24px;
    display: block;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.enshrine-bottom-cart .badge {
    position: absolute;
    right: 0;
    top: 0;
    color: #ff464e;
}

.enshrine-no-content {
    width: 100%;
    height: 100%;
    position: relative;
    background-color: #fff;
}

.enshrine-no-content image {
    width: 280rpx;
    height: 280rpx;
    display: block;
}

.no-content-box {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-90%);
}

.vip-mark {
    border: 1px solid transparent;
    font-size: 11px;
    border-radius: 1px;
    padding: 1px 2px;
    display: inline-block;
    margin-bottom: 6px;
    line-height: 1;
    margin-left: 4px;
    color: #FFE8AB;
}

.full-goods__info {
    border-bottom: none;
}

.full-goods__btns {
    line-height: 56rpx;
}