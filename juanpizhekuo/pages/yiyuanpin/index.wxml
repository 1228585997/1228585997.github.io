<template name="forNewTpl">
    <navigator bindtap="statisticsTap" class="fornew-good" data-activity="{{item.activityname}}" data-activityparam="{{item.server_jsonstr}}" data-status="{{item.status}}" data-zhuge-activity="{{item.zg_event}}" data-zhuge-activityparam="{{item.zg_json}}" id="{{item.goods_id}}" url="{{item.url}}" wx:for="{{data}}" wx:key="item.goods_id">
        <view class="fornew-good-pic">
            <image lazyLoad class="pic" mode="aspectFill" src="{{item.img_url}}"></image>
            <view class="tag" wx:if="{{item.icon}}">
                <image src="/images/jiaobiao.png"></image>
                <text>{{item.icon}}</text>
            </view>
            <image class="jb" src="https://tuan.juancdn.com/src/img/yyp_jb.png" wx:else></image>
            <text class="over" wx:if="{{item.status}}">抢光了</text>
        </view>
        <view class="info">
            <text class="title">{{item.title}}</text>
            <text class="tag">{{item.num}}</text>
            <view class="bottom">
                <view class="prices">
                    <text class="cprice">¥{{item.cprice}}</text>
                    <text class="oprice">¥{{item.oprice}}</text>
                </view>
                <view class="bottom-info">
                    <text class="bottom-tag" wx:if="{{item.shop_info}}">{{item.shop_info}}</text>
                    <view class="btn {{item.status?'btn-ghost':'btn-primary'}}">
                        <text class="btn-text">{{item.btnName}}</text>
                        <text class="angle"></text>
                    </view>
                </view>
            </view>
        </view>
    </navigator>
</template>
<import src="../../pages/pinhaohuo/goods/index.wxml"></import>
<import src="../../components/blockAds/index.wxml"></import>
<scroll-view enableBackToTop bindscroll="dealScroll" bindscrolltolower="scrollGetGoods" class="container" scrollTop="{{scrollTop}}" scrollY="true">
    <template is="blockAdsTpl" data="{{blocks:blockadsArr[0]&&[ blockadsArr[0][0] ],blockTimes:blockTimes,countDownText:countDownText}}"></template>
    <view class="item-title" style="margin-bottom: 10px;">
        <text class="item-title-text">邀请新用户参团，团满立即发货，先到先得</text>
    </view>
    <view class="fornew-goods">
        <template is="forNewTpl" data="{{data:forNews0}}"></template>
        <view class="foru-view" wx:if="{{forU.length}}">
            <image class="foru-title" src="https://tuan.juancdn.com/src/img/yyp_title.png"></image>
            <scroll-view scrollX class="foru-goods">
                <navigator class="foru-good" url="/pages/shop/shop?id={{item.goods_id}}" wx:for="{{forU}}" wx:key="{{goods_id}}">
                    <image src="{{item.img_url}}"></image>
                    <text>¥{{item.price}}</text>
                </navigator>
            </scroll-view>
        </view>
        <template is="forNewTpl" data="{{data:forNews1}}"></template>
        <view class="foru-view" wx:if="{{middleAds&&middleAds.length}}">
            <template is="blockAdsTpl" data="{{blocks:middleAds,blockTimes:blockTimes,countDownText:countDownText}}"></template>
        </view>
        <template is="forNewTpl" data="{{data:forNews}}"></template>
    </view>
    <block wx:if="{{recGoods.length}}">
        <view class="item-title">
            <text class="item-title-text">好货推荐</text>
        </view>
        <template is="phhGoods" data="{{list:recGoods,ifRecGoods:true}}"></template>
        <include src="/components/loadmore/loadmore.wxml"></include>
    </block>
</scroll-view>
<include src="/components/backtop/backtop.wxml"></include>
<include src="/components/error-msg/error-msg.wxml"></include>
