.dialog-wrap {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 99;
}

.dialog-ceng {
    background: #000;
    opacity: 0.6;
    position: fixed;
    z-index: 99;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.dialog-content {
    background: #fb3a20;
    border-radius: 16rpx;
    color: #fff7db;
    width: 620rpx;
    position: fixed;
    top: 20%;
    left: 50%;
    margin-left: -310rpx;
    padding: 8rpx 8rpx;
    z-index: 100;
}

.pull-rule {
    border-radius: 4rpx;
    padding: 38rpx 28rpx;
}

.close-btn {
    display: inline-block;
    width: 41rpx;
    height: 41rpx;
    position: absolute;
    top: 30rpx;
    right: 30rpx;
}

.close-btn__image {
    display: block;
    width: 41rpx;
    height: 41rpx;
}

.pop-title {
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    color: #fff7db;
    text-align: left;
    padding-left: 22rpx;
}

.pop-text-box {
    margin: 40rpx 22rpx;
    height: 500rpx;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.pop-text {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #fff7db;
    text-align: justify;
    line-height: 44rpx;
    margin-bottom: 10rpx;
}