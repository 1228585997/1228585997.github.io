.goods-item {
    display: flex;
    background: #fff;
    width: 100%;
    overflow: hidden;
    padding: 32rpx 24rpx;
    border-bottom: 1px solid #e5e5e5;
}

.goods-item .goods-pic {
    width: 216rpx;
    height: 216rpx;
    margin-right: 24rpx;
}

.goods-pic__image {
    display: block;
    width: 216rpx;
    height: 216rpx;
}

.goods-info {
    flex-grow: 1;
    width: 460rpx;
}

.goods-info .goods-title {
    color: #333;
    line-height: 40rpx;
    margin-bottom: 20rpx;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.goods-body {
    color: #333;
    margin-bottom: 10rpx;
    min-height: 44rpx;
}

.goods-body .left-time {
    color: #999;
}

.goods-body .new-price {
    color: #ff464e;
    font-weight: bold;
    display: inline-block;
}

.goods-body .cprice-num {
    font-size: 40rpx;
}

.goods-body .old-price {
    color: #999;
    margin-left: 10rpx;
    font-size: 24rpx;
    display: inline-block;
}

.goods-bottom {
    overflow: hidden;
}

.goods-bottom .remaining-info {
    color: #ff464e;
    float: left;
    margin-top: 22rpx;
}

.goods-bottom .handle-btn {
    border-radius: 4rpx;
    background: #ff464e;
    color: #fff;
    float: right;
    width: 140rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
}

.goods-bottom .handle-btn.disabled {
    background: #ccc;
}