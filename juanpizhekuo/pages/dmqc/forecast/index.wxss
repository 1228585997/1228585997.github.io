@import "../../../components/loadmore1/loadmore.wxss";

page,.container {
    height: 100%;
}

.tabs {
    width: 100%;
    height: 44px;
    font-size: 0;
    color: #353535;
    background-color: #fff;
}

.tabs scroll-view {
    width: 100%;
    height: 44px;
    line-height: 44px;
    white-space: nowrap;
    background-color: #fff;
}

.fixed-tabs {
    position: fixed;
    left: 0;
    top: -10px;
    z-index: 10;
}

.tabs-btn {
    display: inline-block;
    height: 44px;
    font-size: 14px;
    padding-left: 2.5px;
    padding-right: 2.5px;
    margin-left: 12px;
    margin-right: 12px;
    text-align: center;
    vertical-align: middle;
}

.tabs-btn__active {
    color: #ff464e;
    border-bottom: 2px solid #ff464e;
}

.brand {
    width: 100%;
    height: 422rpx;
    background-color: white;
    padding: 20rpx;
    margin-bottom: 20rpx;
}

.brand_box {
    width: 100%;
    height: 422rpx;
}

.bg_image {
    width: 100%;
    height: 290rpx;
}

.brand .look__more {
    position: absolute;
    width: 72px;
    height: 24px;
    color: #333;
    background-color: #fff;
    border-radius: 100px;
    top: 102rpx;
    right: 48rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.info_box {
    width: 710rpx;
    height: 112rpx;
    display: flex;
    margin-left: 8rpx;
    margin-right: 8rpx;
    position: relative;
}

.time__whole__text {
    color: #333;
    font-size: 14px;
}

.times {
    margin-right: 20rpx;
    vertical-align: center;
    height: 28rpx;
    display: flex;
    flex-direction: row;
    margin-top: 28rpx;
}

.times .prefix {
    font-size: 14;
    margin-right: 20rpx;
}

.time__hours,.time__minutes,.time__seconds {
    font-size: 12px;
    color: white;
    background-color: black;
    line-height: 28rpx;
    border-radius: 2px;
    display: inline-block;
    width: 18px;
    height: 28rpx;
    text-align: center;
    vertical-align: middle;
}

.time__hours__text,.time__minutes__text {
    color: black;
    margin: 0 2px;
}

.remind_btn_normal {
    background-color: #17CC63;
    position: absolute;
    height: 56rpx;
    float: right;
    right: 28rpx;
    top: 24rpx;
    border-radius: 4rpx;
    padding: 8rpx 24rpx 8rpx 24rpx;
}

.remind_btn_selected {
    background-color: #BBBBBB;
    position: absolute;
    height: 56rpx;
    float: right;
    right: 28rpx;
    top: 24rpx;
    border-radius: 4rpx;
    padding: 8rpx 24rpx 8rpx 24rpx;
}

.remind_txt {
    font-size: 14;
    color: white;
    text-align: center;
}