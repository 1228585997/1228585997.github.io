@import "../../../components/loadmore1/loadmore.wxss";

@import "../../search/header/header.wxss";

page,.container {
    height: 100%;
}

.tabs {
    width: 100%;
    height: 44px;
    font-size: 0;
    color: #353535;
    background-color: #fff;
}

#tabs scroll-view {
    width: 100%;
    height: 44px;
    line-height: 44px;
    white-space: nowrap;
    background-color: #fff;
}

.fixed-tabs {
    left: 0;
    width: 100%;
    height: 44px;
    font-size: 0;
    color: #353535;
    background-color: #fff;
}

.tabs-btn {
    display: inline-block;
    height: 44px;
    font-size: 14px;
    padding-left: 2.5px;
    padding-right: 2.5px;
    margin-left: 12px;
    margin-right: 12px;
    text-align: center;
    vertical-align: middle;
}

.tabs-btn__active {
    color: #ff464e;
    border-bottom: 2px solid #ff464e;
}

.brand-container {
    width: 100%;
}

.brand-section-gap {
    height: 11px;
    background-color: transparent;
}

.section-title {
    text-align: center;
    font-size: 16px;
    height: 48px;
    background-color: white;
    padding: 14px 0 14px 0;
    border-bottom-width: 1px;
    border-bottom: #000;
}

.brand-section {
    background-color: white;
    display: flex;
    flex-wrap: wrap;
    margin-top: 1px;
}

.brand-section .brand-cell {
    width: 25%;
    height: 80px;
    padding: 13px 10px 20px 10px;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.brand-section .brand-cell .brand-image {
    width: 96rpx;
    height: 48rpx;
}

.brand-section .brand-cell .brand-title {
    color: black;
    font-size: 12px;
    height: 32rpx;
    line-height: 32rpx;
    margin-top: 10rpx;
    white-space: nowrap;
    width: 196rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}

.mask-pane-center {
    width: 590rpx;
    color: white;
    background-color: white;
    position: fixed;
    z-index: 12;
    top: 50%;
    left: 50%;
    max-width: 80%;
    border-radius: 8px;
    transform: translate(-50%,-50%);
}

.win_container {
    width: 100%;
    height: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.win_image {
    width: 220rpx;
    height: 220rpx;
    margin-top: 80rpx;
}

.win_title {
    margin-top: 48rpx;
    font-size: 36rpx;
    color: #333;
}

.win_title_ {
    margin-top: 40rpx;
    font-size: 36rpx;
    color: #333;
}

.win_description {
    margin-top: 24rpx;
    font-size: 32rpx;
    color: #666;
}

.bottom_bar {
    margin-top: 40rpx;
    height: 96rpx;
    width: 100%;
    border-top: 1px solid #ebebeb;
    display: flex;
    flex-direction: row;
}

.favoriteInput {
    margin-top: 40rpx;
    width: 90%;
    height: 72rpx;
    border: 1px solid #ebebeb;
    border-radius: 4px;
    text-align: left;
    padding-left: 2px;
    color: #666;
}

.bottom_btn {
    display: flex;
    flex: 1;
    align-items: center;
    justify-content: center;
}

.gap {
    height: 100%;
    width: 1px;
    background-color: #ebebeb;
}