@import "../../../components/backtop/backtop.wxss";

page,.container {
    background-color: #efeff4;
}

.view-list {
    position: relative;
}

.income-section {
    width: 100%;
    height: 234rpx;
    background: #ff464e;
    color: #fff;
    text-align: center;
}

.income-title {
    padding-top: 48rpx;
    font-size: 28rpx;
}

.income-sum {
    margin-top: 8rpx;
    font-size: 64rpx;
}

.record-list {
    font-size: 28rpx;
    color: #333;
}

.record-list.empty {
    position: absolute;
    top: 254rpx;
    bottom: 0;
    width: 100%;
    background: #fff;
}

.record-date {
    height: 88rpx;
    line-height: 88rpx;
    padding-left: 28rpx;
    background: #fff;
    border-bottom: 2rpx solid #EBEBEB;
    margin-top: 20rpx;
}

.record-date:first-of-type {
    margin-top: 0;
}

.income-item {
    padding: 28rpx 0;
    position: relative;
    background: #fff;
}

.item-content {
    display: flex;
    padding-right: 78rpx;
}

.order-desc {
    margin-left: 28rpx;
    width: 532rpx;
    line-height: 48rpx;
}

.sale-icon {
    display: inline-block;
    padding: 2rpx 4rpx;
    font-size: 20rpx;
    color: #fff;
    background: #ff464e;
    border-radius: 2rpx;
    vertical-align: top;
    margin-right: 8rpx;
    margin-top: 10rpx;
    height: 28rpx;
    line-height: 28rpx;
}

.item-num {
    position: absolute;
    top: 50%;
    right: 28rpx;
    transform: translateY(-50%);
    color: #ff464e;
    font-size: 32rpx;
    font-weight: 600;
}

.no-list {
    text-align: center;
    background: #fff;
    margin-top: 20rpx;
}

.no-list-img {
    width: 280rpx;
    height: 280rpx;
    margin: 144rpx auto 24rpx auto;
}

.no-list-desc {
    font-size: 32rpx;
    color: #333;
}