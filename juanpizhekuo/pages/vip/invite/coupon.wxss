@import "../../../components/vip-invite-goods/index.wxss";

page {
    background: #E6361C;
}

button::after {
    border: none;
}

.new-user-content {
    padding: 40rpx;
}

.coupon-bg {
    width: 694rpx;
    height: 688rpx;
    position: relative;
    margin: 0 auto 64rpx;
}

.code-txt {
    color: #333;
    font-size: 32rpx;
    text-align: center;
    padding-top: 40rpx;
    margin-bottom: 64rpx;
}

.coupon-info {
    width: 550rpx;
    height: 200rpx;
    margin: 0 auto 56rpx;
}

.input-info {
    margin-bottom: 32rpx;
}

.code-placeholder {
    color: #BBB;
    font-size: 28rpx;
}

.code-input {
    border: 2rpx solid #dbdbdb;
    border-radius: 40rpx;
    color: #333;
    font-size: 28rpx;
    width: 512rpx;
    height: 76rpx;
    margin: 0 auto;
    padding-left: 34rpx;
}

.now-get-btn {
    width: 550rpx;
    height: 80rpx;
    margin: 0 auto 32rpx;
}

.code-tips {
    width: 100%;
    color: #999;
    font-size: 24rpx;
    text-align: center;
}

.new-user-part {
    border-radius: 4rpx;
    background: #fafafa;
    overflow: hidden;
    margin-bottom: 72rpx;
}

.new-user-part .goods-list .texts {
    width: 417rpx;
}

.new-user-part .goods-list .vip-sign {
    margin-bottom: 8rpx;
}

.rule-title {
    width: 100%;
    text-align: center;
    color: #fff;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 24rpx;
}

.rule-txt {
    color: #fff;
    font-size: 28rpx;
    margin-bottom: 6rpx;
}