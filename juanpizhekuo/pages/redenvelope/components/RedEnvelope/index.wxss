.redenv__root {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 99999;
    background-color: rgba(0,0,0,0.60);
}

.redenv__box {
    width: 750rpx;
    height: 1008rpx;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
    display: inline-flex;
    flex-direction: column;
    justify-items: center;
}

.redenv__box.redenv__box_2 {
    height: 1218rpx;
}

.redenv__close {
    width: 48rpx;
    height: 48rpx;
    position: absolute;
    right: 65.4rpx;
    top: 117.4rpx;
}

.redenv__money-box {
    margin-top: 306rpx;
    color: #FF1C26;
    font-size: 108rpx;
    height: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.redenv__money-box .redenv__rmb {
    font-size: 84rpx;
    margin-right: 24rpx;
}

.redenv__rmb,.redenv__money {
    line-height: 150rpx;
    font-weight: bold;
}

.redenv__body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.redenv__body-content {
    margin-top: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    color: #ffffff;
    font-size: 32rpx;
    font-weight: bold;
}

.redenv__body .redenv_btn {
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    width: 480rpx;
    height: 108rpx;
    background-color: rgba(0,0,0,0);
    display: inline-box;
}

.redenv__body_0 .redenv__btn_share {
    margin-top: 18rpx;
}

.redenv__body_1 .redenv__btn_pure {
    margin-top: 122rpx;
}

.redenv__body_1 .redenv__btn_using {
    margin-top: 18rpx;
}

.redenv__body_2 .redenv__btn_pure {
    width: 490rpx;
    margin-top: 814rpx;
}

.redenv__btn_share::after {
    border: none;
}