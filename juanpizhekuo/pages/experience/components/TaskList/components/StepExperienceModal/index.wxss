.expr-modal__root {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 99999;
    background-color: rgba(0,0,0,0.5);
}

.expr-modal__box {
    background-size: cover;
    background-repeat: no-repeat;
    width: 630rpx;
    height: 820rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    flex-direction: column;
}

.expr-modal__title {
    font-size: 40rpx;
    color: #ffffff;
    margin-bottom: 44rpx;
    line-height: 76rpx;
    text-align: center;
}

.expr-modal__confirm-btn {
    width: 488rpx;
    height: 80rpx;
    background: #FFDE00;
    border-radius: 47px;
    color: #F8424A;
    font-size: 40rpx;
    margin-bottom: 96rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}