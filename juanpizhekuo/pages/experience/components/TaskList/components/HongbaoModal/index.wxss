.expr-modal__root {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 99999;
    background-color: rgba(0,0,0,0.5);
}

.expr-modal__box {
    position: relative;
    background-size: cover;
    background-repeat: no-repeat;
    width: 750rpx;
    height: 1008rpx;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    flex-direction: column;
}

.expr-modal__title {
    font-size: 36rpx;
    color: #fff;
    margin-bottom: 32rpx;
}

.expr-modal__confirm-btn {
    width: 480rpx;
    height: 108rpx;
    margin-bottom: 272rpx;
    background: url(//jp.juancdn.com/xcx_images/dasabi/see.gif) no-repeat;
    background-size: cover;
}

.expr-modal__close-btn {
    position: absolute;
    top: 116rpx;
    right: 66rpx;
    background: url(//jp.juancdn.com/xcx_images/dasabi/close.png) no-repeat;
    background-size: cover;
    width: 50rpx;
    height: 50rpx;
}

.expr-modal__money {
    text-align: center;
    margin-bottom: 84rpx;
    font-size: 72rpx;
    color: #FF1C26;
}

.expr-modal__tips {
    text-align: center;
    margin-bottom: 30rpx;
    color: #4A4A4A;
    font-size: 28rpx;
}