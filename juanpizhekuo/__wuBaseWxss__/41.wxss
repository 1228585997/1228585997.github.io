.sort-tabs {
    display: flex;
    line-height: 40px;
    color: #333;
    text-align: center;
    background-color: #fff;
}

.sort-tabs__item {
    flex: 1;
}

.sort-tabs__active {
    color: #ff464e;
}

.sort-tabs__price {
    display: flex;
    align-items: center;
    justify-content: center;
}

.sort-tabs__price__up {
    width: 0;
    height: 0;
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
    border-bottom: 4px solid;
    margin-left: 4px;
    color: #999;
}

.sort-tabs__price__up__active {
    border-bottom: 4px solid #ff464e;
}

.sort-tabs__price__down {
    width: 0;
    height: 0;
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
    border-top: 4px solid;
    margin-left: 4px;
    margin-top: 3px;
    color: #999;
}

.sort-tabs__price__down__active {
    border-top: 4px solid #ff464e;
}