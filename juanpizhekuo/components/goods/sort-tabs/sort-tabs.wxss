.sort-tabs {
    display: flex;
    width: 100%;
    height: 40px;
    line-height: 40px;
    background: #ffffff;
}

.sort-tabs_fix {
    z-index: 100;
    position: fixed;
    left: 0;
    display: flex;
    width: 100%;
    height: 40px;
    line-height: 40px;
    background: #ffffff;
}

#sort-tabs .item {
    flex: 1;
    color: #333333;
    text-align: center;
}

#sort-tabs .red {
    color: #ff464e;
}

#sort-tabs .arrow {
    display: inline-block;
    position: relative;
    width: 5px;
    height: 10px;
}

#sort-tabs .filter {
    width: 10px;
    height: 10px;
    display: inline-block;
    vertical-align: middle;
}

#sort-tabs .filter image {
    width: 10px;
    height: 10px;
    vertical-align: top;
}

#sort-tabs .arrow .up,#sort-tabs .arrow .down {
    position: relative;
    width: 0;
    height: 0;
    border-style: solid;
}

#sort-tabs .arrow .up {
    top: 1px;
    border-width: 0 3px 3px 3px;
    border-color: transparent transparent #999999 transparent;
}

#sort-tabs .arrow .down {
    top: 3px;
    border-width: 3px 3px 0 3px;
    border-color: #999999 transparent transparent transparent;
}

#sort-tabs .asc .up {
    border-color: transparent transparent #ff464e transparent;
}

#sort-tabs .desc .down {
    border-color: #ff464e transparent transparent transparent;
}