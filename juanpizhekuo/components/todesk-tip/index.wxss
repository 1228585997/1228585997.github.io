.todesk-tip {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 10;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.7);
}

.todesk-tip__content {
    position: absolute;
    right: 0;
    top: 0;
    z-index: 10;
    width: 250px;
    padding-top: 14px;
    line-height: 1.4;
    color: #fff;
    text-align: center;
}

.todest-tip__big {
    font-size: 24px;
    margin-top: 4px;
    margin-bottom: 4px;
}

.todesk-tip__content image {
    width: 183px;
    height: 98px;
    margin-left: 40px;
    margin-bottom: 5px;
}