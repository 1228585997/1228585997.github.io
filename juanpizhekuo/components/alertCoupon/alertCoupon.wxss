.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 888;
    color: #fff;
}

.modal-dialog-coupon {
    display: flex;
    flex-direction: column;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    justify-content: center;
    align-items: center;
    z-index: 900;
}

.modal-dialog-coupon-content {
    width: 700rpx;
    max-height: 932rpx;
    position: relative;
    z-index: 100;
    background-image: linear-gradient(-135deg,#ff6a4e,#ff4827);
    border-radius: 8rpx;
    box-sizing: border-box;
    padding: 0 24rpx 40rpx;
}

.modal-title-head {
    padding-top: 26rpx;
    font-size: 40rpx;
    color: #fff;
    text-align: center;
}

.modal-title-coupon {
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    margin-bottom: 26rpx;
}

.modal-coupon-content {
    width: 652rpx;
    margin: 0 auto;
    background: #f4f4f8;
    max-height: 616rpx;
    overflow-y: scroll;
}

.modal-input {
    width: 100%;
    height: 80rpx;
    font-size: 28rpx;
    background: #ececec;
    border-radius: 8rpx;
    color: #333;
    padding: 18rpx 20rpx;
    margin-bottom: 20rpx;
}

input-holder {
    color: #666;
    font-size: 28rpx;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    font-size: 34rpx;
    line-height: 86rpx;
}

.coupon-title {
    line-height: 40px;
    text-align: center;
    font-size: 13px;
    color: #666;
}

.btn-confirm {
    width: 100%;
    height: 88rpx;
    color: #ec5300;
    text-align: center;
    background: #FFFFFF;
    border-radius: 2px;
    margin-top: 20rpx;
}