<view class="block{{item.block_type}} type1">
    <navigator class="back-img-url" hoverClass="none" openType="navigate" url="{{item.data.img_info.jump_url}}">
        <image src="{{item.data.img_info.pic_url}}" style="height:{{750*item.data.img_info.pic_height/item.data.img_info.pic_width}}rpx;"></image>
    </navigator>
    <view class="goods-box">
        <view class="type1-goods" wx:for="{{item.data.child}}" wx:for-item="childitem" wx:key="index">
            <navigator bindtap="statisticsTap" data-activity="click_cube_block" data-activityparam="{{childitem.server_jsonstr}}" data-url="{{childitem.jump_url}}" data-zhuge-activity="{{childitem.zg_event}}" data-zhuge-activityparam="{{childitem.zg_json}}" hoverClass="none" openType="{{tab.isPageInTab(childitem.jump_url)?'switchTab':'navigate'}}" url="{{childitem.jump_url}}">
                <view class="img-box">
                    <image mode="widthFix" src="{{childitem.pic_url}}"></image>
                </view>
                <view class="price-info">
                    <text class="price">{{childitem.cprice}}</text>
                    <text class="oprice">{{childitem.oprice}}</text>
                </view>
            </navigator>
        </view>
    </view>
</view>
