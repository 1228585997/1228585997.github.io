.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 888;
    color: #fff;
}

.modal-dialog {
    width: 590rpx;
    height: 784rpx;
    overflow: hidden;
    margin: auto;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 900;
    background: #f9f9f9;
    border-radius: 18rpx;
}

.modal-title {
    padding-top: 80rpx;
    font-size: 32rpx;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding: 0rpx 60rpx;
}

.modal-coupon {
    width: 450rpx;
    height: 240rpx;
    margin: 20rpx 0 40rpx;
    position: relative;
}

.modal-coupon-text {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    margin: 0 auto;
    width: 100%;
    text-align: center;
    line-height: 240rpx;
    color: #fff;
}

.modal-coupon-price {
    font-size: 80rpx;
}

.MyCouponImg {
    width: 450rpx;
    height: 240rpx;
}

.modal-input {
    width: 100%;
    height: 80rpx;
    font-size: 28rpx;
    background: #ececec;
    border-radius: 8rpx;
    color: #333;
    padding: 18rpx 20rpx;
    margin-bottom: 20rpx;
}

.input {
    height: 34rpx;
}

.modal-input-Verification {
    width: 100%;
    height: 80rpx;
    display: flex;
    margin-bottom: 20rpx;
    justify-content: space-between;
}

.input-Verification {
    width: 270rpx;
    height: 80rpx;
    background: #ececec;
    border-radius: 8rpx;
    box-sizing: border-box;
    padding: 18rpx 20rpx;
}

.getVerification {
    width: 190rpx;
    border-radius: 4px;
    text-align: center;
    line-height: 80rpx;
    font-family: PingFangSC-Regular;
}

.getVerificationBefore {
    color: #fff;
    background: #ff464e;
}

.getVerificationAfter {
    background: #ececec;
    color: #999;
}

.Receive {
    width: 100%;
    text-align: center;
    border: 0 solid #ccc;
    border-radius: 4px;
}

.ReceiveBefore {
    color: #fff;
    background: #FF464E;
}

.ReceiveAfter {
    background: #ececec;
    color: #999;
}