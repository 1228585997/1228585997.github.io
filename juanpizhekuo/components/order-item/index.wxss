.item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 28rpx 36rpx 36rpx;
    background-color: #fff;
}

.item__left {
    width: 140rpx;
    height: 140rpx;
}

.item__left image {
    width: 100%;
    height: 100%;
}

.item__middle {
    flex-grow: 1;
    padding: 0 28rpx;
}

.item__name {
    color: #4a4a4a;
    width: 382rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.item__info {
    width: 382rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #bbb;
    margin-top: 15rpx;
}

.item__tags {
    margin-top: 20rpx;
}

.item__tag {
    display: inline-block;
    width: 50px;
    line-height: 12px;
    font-size: 10px;
    color: #fff;
    background-color: #ff5050;
    text-align: center;
}

.item__tag--global {
    width: auto;
    padding: 0 2px;
    background-color: #fff;
    color: #c485fe;
    border: 1px solid #c485fe;
}

.item__price {
    color: #4a4a4a;
}

.item__nums {
    margin-top: 15rpx;
    color: #bbb;
}

.item__right {
    width: 100rpx;
    text-align: right;
}

.item--cart .item__info {
    font-size: 12px;
}

.item__inc,.item__dec {
    display: inline-block;
    width: 24px;
    height: 24px;
    line-height: 24px;
    text-align: center;
    background-color: #f7f7f7;
    color: #dbdbdb;
}

.item__inc--active,.item__dec--active {
    color: #ff464e;
}

.item__inc--disabled {
    color: #dbdbdb;
}

.item__total {
    margin: 0 22px;
}

.item__del {
    font-family: arial;
    font-size: 20px;
    margin-top: 30rpx;
    color: #bbb;
    width: 12px;
    height: 12px;
}

.item--historyCart {
    background-color: transparent;
    padding-bottom: 28rpx;
}

.item--historyCart .item__nums {
    text-decoration: line-through;
}

.item__reAdd {
    margin-top: 20rpx;
}