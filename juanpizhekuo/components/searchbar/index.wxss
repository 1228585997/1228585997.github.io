.search-box {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 9;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 44px;
    width: 100%;
    padding-bottom: 12px;
    padding-left: 32rpx;
    padding-right: 24rpx;
    background-color: #ff464e;
}

.search-box__input {
    display: flex;
    align-items: center;
    width: 618rpx;
    height: 100%;
    background-color: #fff;
    border-radius: 16px;
    font-size: 14px;
    color: #bbb;
    overflow: hidden;
}

.search-box__icon {
    width: 14px;
    height: 14px;
    margin-left: 10px;
    margin-right: 5px;
}

.search-box__img {
    width: 30px;
    height: 15px;
    margin-right: 5px;
}

.search-box__classify {
    width: 34px;
    height: 34px;
    padding: 5px;
    box-sizing: border-box;
}

.search-box__classify image {
    width: 100%;
    height: 100%;
}