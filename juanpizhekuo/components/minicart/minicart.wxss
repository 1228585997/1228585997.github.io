.bottomnav {
    position: fixed;
    bottom: 12px;
    left: 12px;
    display: flex;
    background-color: rgba(0,0,0,0.7);
    border-radius: 3px;
    align-items: stretch;
    text-align: center;
    z-index: 9;
}

.bottomnav navigator {
    padding: 8px;
    position: relative;
}

.bottomnav .box {
    padding: 8px;
    position: relative;
}

.bottomnav .bottomnav__last {
    border-right: none;
}

.bottomnav image {
    width: 24px;
    height: 24px;
    vertical-align: top;
}

.badge {
    display: inline-block;
    padding-left: 5px;
    padding-right: 5px;
    height: 16px;
    line-height: 16px;
    background-color: #F12C20;
    color: #fff;
    font-size: 12px;
    border-radius: 8px;
}

.bottomnav .badge {
    position: absolute;
    right: 4px;
    top: 4px;
}