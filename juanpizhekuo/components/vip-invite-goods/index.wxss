.invite-content .share-person {
    text-align: center;
    padding: 52rpx 0 20rpx;
}

.invite-content .invite-goods {
    color: #333;
    font-size: 28rpx;
}

.invite-part .invite-goods .goods-list {
    margin-left: 48rpx;
}

.invite-goods .goods-list {
    clear: both;
    zoom: 1;
    overflow: hidden;
    margin-top: 32rpx;
    margin-left: 24rpx;
}

.invite-goods .pic {
    float: left;
    width: 180rpx;
    height: 180rpx;
    margin-right: 20rpx;
}

.goods-list .goods-pic {
    width: 180rpx;
    height: 180rpx;
}

.goods-list .texts {
    border-bottom: 1px solid #e7e7e7;
    width: 454rpx;
    word-break: break-all;
    text-align: left;
    float: left;
    padding-bottom: 26rpx;
}

.goods-list:last-child .texts {
    border-bottom: none;
}

.goods-list .goods-title {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    line-height: 36rpx;
    height: 72rpx;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
}

.goods-list .goods-price {
    margin-top: 14rpx;
    float: left;
}

.goods-list .new-price {
    color: #151515;
    font-size: 30rpx;
    line-height: 30rpx;
    margin-right: 2rpx;
}

.goods-list .old-price {
    color: #ff464e;
    font-size: 32rpx;
    line-height: 32rpx;
}

.goods-list .coupons-price {
    color: #ff464e;
    font-size: 24rpx;
    font-weight: bold;
    line-height: 24rpx;
    vertical-align: middle;
    margin-right: 2rpx;
}

.goods-list .back-mark {
    color: #151515;
    font-size: 32rpx;
    line-height: 32rpx;
    margin-right: 2rpx;
    vertical-align: -2rpx;
}

.goods-list .goods-buy-hanle {
    float: right;
}

.goods-list .vip-sign {
    margin-bottom: 14rpx;
}

.goods-list .vip-zx {
    border-radius: 2rpx;
    background: #FFF0DB;
    color: #CC793D;
    display: inline-block;
    height: 28rpx;
    line-height: 28rpx;
    font-size: 20rpx;
    padding: 0 4rpx;
}

.goods-list .new-zx {
    border-radius: 2rpx;
    background: #FFEBEC;
    color: #ff464e;
    display: inline-block;
    height: 28rpx;
    line-height: 28rpx;
    font-size: 20rpx;
    padding: 0 4rpx;
}

.goods-list .buy-info {
    color: #E6361C;
    font-weight: 600;
    float: left;
    margin-top: 10rpx;
}

.buy-info .txts-a {
    font-size: 20rpx;
    margin-right: 4rpx;
}

.buy-info .txts-b {
    font-size: 32rpx;
}

.hanle-info {
    float: right;
}

.hanle-info .hanle-btn {
    background: #E6361C;
    border-radius: 6rpx;
    color: #fff;
    width: 168rpx;
    height: 56rpx;
    line-height: 56rpx;
    text-align: center;
    font-size: 24rpx;
    padding-left: 0;
    padding-right: 0;
}