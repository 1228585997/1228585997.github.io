.goods-container {
    background-color: #fff;
    border-top: 1px solid #ebebeb;
}

.full-goods {
    display: flex;
    padding-top: 30rpx;
    padding-left: 24rpx;
    width: 96%;
}

.full-goods__pic {
    position: relative;
    width: 220rpx;
    height: 220rpx;
    margin-right: 24rpx;
}

.full-goods__pic image {
    width: 220rpx;
    height: 220rpx;
}

.full-goods__pic_over {
    position: absolute;
    z-index: 2;
    top: 50%;
    left: 50%;
    width: 72px;
    height: 72px;
    line-height: 72px;
    color: #fff;
    font-size: 14px;
    border-radius: 50%;
    background-color: rgba(74,74,74,0.7);
    text-align: center;
    overflow: hidden;
    transform: translate(-50%,-50%);
}

.full-goods__info {
    position: relative;
    flex: 1;
    height: 250rpx;
    border-bottom: 1rpx solid #ebebeb;
    font-size: 32rpx;
    line-height: 40rpx;
    color: #333;
    padding-right: 24rpx;
}

.full-goods__title {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    width: 100%;
    margin-bottom: 16rpx;
    font-size: 30rpx;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
}

.full-goods__info .old-price {
    color: #bbb;
    font-size: 24rpx;
    line-height: 35rpx;
    text-decoration: line-through;
    vertical-align: 2rpx;
}

.full-goods__info .vip_tips {
    color: #bbb;
    font-size: 28rpx;
    text-align: right;
    display: inline-block;
    vertical-align: middle;
}

.full-goods__info .vip_tips_img {
    width: 28rpx;
    height: 28rpx;
    text-align: left;
    padding-right: 10rpx;
    display: inline-block;
    vertical-align: middle;
}

.full-goods__btns {
    position: absolute;
    left: 0;
    bottom: 24rpx;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-right: 24rpx;
}

.full-goods__fprice {
    display: inline-block;
    align-items: center;
    color: #ff464e;
    font-size: 22rpx;
    vertical-align: 1rpx;
    margin-left: 10rpx;
}

.full-goods__fprice text {
    margin-top: -5.5rpx;
    margin-left: 4rpx;
    font-size: 28rpx;
}

.full-goods__btn {
    height: 56rpx;
    line-height: 56rpx;
    padding-left: 16rpx;
    padding-right: 16rpx;
    font-size: 26rpx;
    border-radius: 4rpx;
    background: #ff464e;
    color: #fff;
}

.good-title {
    height: 40px;
    line-height: 40px;
    text-align: center;
    background: #fff;
    font-size: 14px;
    color: #151515;
    margin-top: 17rpx;
}

.goods-list {
    background: #efefef;
}

.goods-item {
    background: #fff;
    margin-bottom: 17rpx;
}

.goods-item .brand-img {
    position: relative;
}

.goods-item .brand-img image {
    width: 100%;
    vertical-align: middle;
}

.goods-item .goods-con {
    padding: 10px 0;
}

.goods-item .goods-con .sub-goods-item {
    display: inline-block;
    margin-left: 2.5%;
    width: 30%;
    vertical-align: middle;
}

.goods-square-item {
    width: 374rpx;
    margin-top: 4rpx;
    font-size: 14px;
    background-color: #fff;
    display: inline-block;
}

.goods-square-item:nth-of-type(2n) {
    margin-left: 2rpx;
}

.goods-square-item .goods-img {
    position: relative;
    height: 370rpx;
    width: 100%;
}

.goods-square-item .goods-img .jiao {
    position: absolute;
    top: 0;
    left: 0;
    width: 70rpx;
    height: 70rpx;
}

.goods-square-item image {
    height: 100%;
    width: 100%;
}

.goods-square-item .goods-text {
    padding: 12px 10px;
    line-height: 1;
    font-size: 12px;
    color: #3b3b3b;
    overflow: hidden;
}

.goods-square-item .goods-text .goods_detail {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.goods-square-item .goods-text__price {
    line-height: 15px;
    color: #ff464e;
    font-size: 15px;
}

.goods-square-item .goods-text__price text::before {
    content: "Â¥";
    margin-right: 2px;
}

.goods-square-item .goods-text__del {
    margin-left: 5px;
    text-decoration: line-through;
    color: #999;
    font-size: 11px;
}

.goods-square-item .goods-text__price .goods-text__del::before {
    font-size: inherit;
}

.goods-square-item .goods-title {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding-bottom: 8px;
}

.goods-banner-item {
    width: 100%;
    margin-bottom: 10rpx;
}

.goods-banner-item image {
    width: 100%;
    vertical-align: middle;
}

.goods-text-extra {
    height: 40rpx;
    border-top: 1px dashed #ebebeb;
    flex-direction: row;
    align-items: center;
    position: relative;
    font-size: 8rpx;
}

.goods-text-extra text {
    color: #999999;
    font-size: 12px;
    line-height: 63rpx;
}

.goods-text-extra .good-comment-rate {
    position: absolute;
    left: 2rpx;
}

.goods-text-extra .sale-amount {
    position: absolute;
    right: 2rpx;
}