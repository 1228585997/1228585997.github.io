.near-group {
    font-size: 12px;
    color: #666;
}

.near-group__title {
    padding-top: 12px;
    padding-bottom: 12px;
    color: #333;
    font-size: 14px;
}

.near-group__title view {
    color: #999;
    font-size: 12px;
}

.near-group__item {
    display: flex;
    align-items: center;
    padding-top: 12px;
    padding-bottom: 12px;
    border-top: 1px solid #ebebeb;
}

.near-group__pic {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    overflow: hidden;
}

.near-group__pic image {
    width: 100%;
    height: 100%;
}

.near-group__btn {
    width: 60px;
    height: 28px;
    line-height: 28px;
    color: #ff464e;
    text-align: center;
    border-radius: 2px;
    border: .5px solid #ff464e;
}

.near-group__info {
    flex: 1;
    line-height: 1.4;
    padding-left: 10px;
}

.near-group__info__cd {
    display: flex;
}

.near-group__digit {
    width: 8px;
    height: 10px;
    margin-left: 1px;
    vertical-align: -1px;
}