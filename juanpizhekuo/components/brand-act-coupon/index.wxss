.brand-coupon {
    position: relative;
    width: 100%;
    height: 58px;
    margin-top: 14px;
}

.brand-coupon image {
    position: absolute;
    left: 0;
    top: 0;
    z-index: 0;
    width: 100%;
    height: 100%;
}

.brand-coupon__content {
    position: relative;
    padding-right: 16px;
    padding-left: 16px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
}

.brand-coupon__txt {
    flex: 1;
    display: flex;
    align-items: center;
    color: #666;
    font-size: 12px;
    line-height: 1.4;
}

.brand-coupon__btn {
    line-height: 26px;
    width: 74px;
    color: #fff;
    text-align: center;
    background-color: #ff464e;
}

.brand-coupon__btn.disabled {
    background: #dbdbdb;
}

.brand-coupon__price {
    font-size: 36px;
    color: #333;
    margin-right: 12px;
    font-family: Arial;
}

.brand-coupon__price::before {
    content: "Â¥";
    font-size: 16px;
}

.act-info {
    display: flex;
    align-items: center;
    width: 100%;
    line-height: 1;
    padding-top: 10px;
    font-size: 12px;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.act-info .red-span {
    margin-right: 4px;
}