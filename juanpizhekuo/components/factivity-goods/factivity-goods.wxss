.goods-item {
    padding: 14px;
    background: #fff;
    border-bottom: 1px solid #ebebeb;
    display: flex;
    justify-content: center;
    align-items: center;
}

.goods-item .img-box {
    width: 100px;
    height: 100px;
    position: relative;
}

.goods-item .img-box image {
    width: 100px;
    height: 100px;
}

.goods-item .img-box .will-over {
    position: absolute;
    bottom: 0;
    width: 100px;
    height: 20px;
    line-height: 20px;
    background: rgba(0,0,0,0.5);
    font-size: 12px;
    color: #fff;
    text-align: center;
}

.goods-item .img-box .over {
    position: absolute;
    top: 23px;
    left: 23px;
    width: 54px;
    height: 54px;
    line-height: 54px;
    background: rgba(0,0,0,0.6);
    font-size: 12px;
    color: #fff;
    text-align: center;
    border-radius: 50%;
}

.goods-item .item-info {
    flex: 1;
    position: relative;
    height: 100px;
    padding-left: 12px;
}

.goods-item .item-info .title {
    font-size: 14px;
    color: #3b3b3b;
    margin-bottom: 7px;
}

.goods-item .item-info .title {
    font-size: 14px;
    color: #3b3b3b;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.goods-item .item-info .cprice {
    font-size: 18px;
    color: #ff464e;
}

.goods-item .item-info .oprice {
    font-size: 12px;
    color: #999;
    margin-left: 7px;
    text-decoration: line-through;
}

.goods-item .item-info .act {
    position: absolute;
    bottom: 0px;
    right: 0px;
    width: 76px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    font-size: 12px;
    color: #ff464e;
    border: 1px solid #ff464e;
    border-radius: 2px;
}

.goods-item .item-info .act.disabled {
    color: #ccc;
    border: 1px solid #dbdbdb;
}

.price {
    display: flex;
    align-items: center;
}

.vip-mark {
    border: 1px solid transparent;
    font-size: 11px;
    border-radius: 1px;
    padding: 1px 2px;
    display: inline-block;
    margin-left: 4px;
    color: #FFE8AB;
}