.promise {
    position: relative;
    line-height: 16px;
    padding-top: 16px;
    padding-bottom: 16px;
    font-size: 12px;
    padding-right: 20px;
}

.promise__item {
    display: inline-block;
    margin-right: 14px;
}

.promise__item::before,.promise-mask__item__title::before {
    content: "";
    display: inline-block;
    vertical-align: middle;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background-color: #ff464e;
    opacity: .5;
    margin-right: 4px;
}

.promise-mask {
    font-size: 14px;
    font-size: #333;
}

.promise-mask__title {
    line-height: 48px;
    font-size: 18px;
    border-bottom: .5px solid #e0e0e0;
    text-align: center;
}

.promise-mask__list {
    padding-left: 20px;
    padding-right: 20px;
    max-height: 280px;
}

.promise-mask__item {
    padding-top: 12px;
    padding-bottom: 14px;
    line-height: 1.4;
    border-bottom: .5px solid #e0e0e0;
}

.promise-mask__item__last {
    border-bottom: none;
}

.promise-mask__item__title::before {
    margin-right: 10px;
}

.promise-mask__item__desc {
    font-size: 12px;
    color: #999;
    padding-left: 14px;
    padding-top: 6px;
}

.promise-mask__btn {
    line-height: 48px;
    background-color: #ff464e;
    text-align: center;
    color: #fff;
    font-size: 18px;
}