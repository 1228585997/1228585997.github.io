        <view class="countdown__seg">
            <text class="countdown__digit">{{time.hoursArr[0]}}</text>
            <text class="countdown__digit">{{time.hoursArr[1]}}</text>
        </view>
        <text class="countdown__label">时</text>
        <view class="countdown__seg">
            <text class="countdown__digit">{{time.minutesArr[0]}}</text>
            <text class="countdown__digit">{{time.minutesArr[1]}}</text>
        </view>
        <text class="countdown__label">分</text>
        <view class="countdown__seg">
            <text class="countdown__digit">{{time.secondsArr[0]}}</text>
            <text class="countdown__digit">{{time.secondsArr[1]}}</text>
        </view>
        <text class="countdown__label">秒</text>
    </view>
</template>
